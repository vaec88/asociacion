$('#description_edit').html('<%= escape_javascript(render :partial =>'descriptions/edit')%>');
$('#description_edit').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Editar",
  modal: true,
  buttons: {
                "Guardar": function()
                {
                    $("#form_edit_description form").submit();
                },
                "Cancelar" : function()
                {
                    $("#description_edit").dialog("close");
                }
            }
});

$('#description_edit').keypress(function(e) {
    if (e.keyCode == $.ui.keyCode.ENTER) {
          $("#form_edit_description form").submit();
    }
});