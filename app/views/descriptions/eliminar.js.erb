$('#description_delete').html('<%= escape_javascript(render :partial =>'descriptions/eliminar')%>');
$('#description_delete').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Eliminar",
  modal: true,
  buttons: {
                "Aceptar": function()
                {
                    $("#form_eliminar_description form").submit();
                },
                "Cancelar" : function()
                {
                    $("#description_delete").dialog("close");
                }
            }
});