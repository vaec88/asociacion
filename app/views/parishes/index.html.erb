<script language="JavaScript" type="text/javascript" src="/javascripts/jquery-ui.js"></script>
<link rel="stylesheet" href="/stylesheets/jquery-ui.css"></link>
<%= stylesheet_link_tag "tablas.css", :media => "screen" %>
<%= label_tag nil, (link_to ">> Provincias ", index_province_path), :class=>"negrita" %><%= label_tag nil, (">> " + @province.prov_nombre), :class=>"negrita" %><%= label_tag nil, (link_to ">> Cantones ", index_canton_path(:province_id => @canton.province_id)), :class=>"negrita" %><%= label_tag nil, (">> " + @canton.cant_nombre), :class=>"negrita" %>
<div id="tabla">
  <table class="bordered">
    <th><div class="titulos"><p>Parroquia</p></div></th>
    <th><div class="titulos"><p>Acciones</p></div></th>
    <% @parroquias.each do |p| %>
      <tr>
        <td><%= label_tag nil, p.parr_nombre %></td>
        <td><%= label_tag nil, (link_to (image_tag "contenido/edit16.png"), {:action => "edit", :id => p.id}, :remote=>true) %><%= label_tag nil, (link_to (image_tag "contenido/delete16.png"), {:action=>"eliminar", :id=>p.id}, :remote=>true) %></td>
      </tr>
    <% end %>
    <%= form_for @parroquia, :remote=>true do |p|%>
      <tr>
        <td><%= p.text_field :parr_nombre, :id=>"parishes_index_parr_nombre", :autofocus => true %></td>
        <%= p.hidden_field :canton_id, value: @id %>
        <td><%= label_tag nil, image_submit_tag("contenido/add2-16.png")%></td>
      </tr>
    <%end%>
  </table>
</div>
