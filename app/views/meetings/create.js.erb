$('#meeting_new').html('<%= escape_javascript(render :partial =>'meetings/show')%>');
if ('<%= @bandera%>' == "blank")
{ $('#advertencia_new').html('<%= escape_javascript('ATENCION: Faltan datos por ingresar')%>');
  if ('<%= @reu_detalle%>' == "blank")
  { document.getElementById("meetings_index_reu_detalle").style.border="1px solid #dc143c";
    document.getElementById("meetings_index_reu_detalle").focus();
  }
  else
  { document.getElementById("meetings_index_reu_detalle").style.border="1px solid #ddd";}
  if ('<%= @reu_actores%>' == "blank")
  { document.getElementById("meetings_index_reu_actores").style.border="1px solid #dc143c";
    document.getElementById("meetings_index_reu_actores").focus();
  }
  else
  { document.getElementById("meetings_index_reu_actores").style.border="1px solid #ddd";}
