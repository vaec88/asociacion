function trim(cadena1, cadena2)
{
var retorno1 = cadena1.replace(/^(\s)*/,"").replace(/(\s)*$/,"").replace(/(\s+)/g," ");
var retorno2 = cadena2.replace(/^(\s)*/,"").replace(/(\s)*$/,"").replace(/(\s+)/g," ");
$("#meetings_index_reu_actores").val(retorno1);
$("#meetings_index_reu_detalle").val(retorno2);
//alert(retorno);
}

document.getElementById("advertencia_new").style.color="#F50E0E";
$('#meeting_new').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Nuevo",
  modal: true,
  buttons: {
                "OK" : function()
                {
                    $("#meeting_new").dialog("close");

                    trim(document.getElementById("meetings_index_reu_actores").value, document.getElementById("meetings_index_reu_detalle").value);
                }
            }
});