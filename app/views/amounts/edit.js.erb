$('#amount_edit').html('<%= escape_javascript(render :partial =>'amounts/edit')%>');
$('#amount_edit').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Editar",
  modal: true,
  buttons: {
                "Guardar": function()
                {
                    $("#form_edit_amount form").submit();
                },
                "Cancelar" : function()
                {
                    $("#amount_edit").dialog("close");
                }
            }
});