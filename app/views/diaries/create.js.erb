  if ('<%= @age_direccion%>' == "blank")
  { document.getElementById("diaries_index_age_direccion").style.border="1px solid #dc143c";
    document.getElementById("diaries_index_age_direccion").focus();
  }
  else
  { document.getElementById("diaries_index_age_direccion").style.border="1px solid #ddd";}

  if ('<%= @age_hora%>' == "blank")
  { document.getElementById("diaries_index_age_hora").style.border="1px solid #dc143c";
    document.getElementById("diaries_index_age_hora").focus();
  }
  else
  { document.getElementById("diaries_index_age_hora").style.border="1px solid #ddd";}

  if ('<%= @age_actividad%>' == "blank")
  { document.getElementById("diaries_index_age_actividad").style.border="1px solid #dc143c";
    document.getElementById("diaries_index_age_actividad").focus();
  }
