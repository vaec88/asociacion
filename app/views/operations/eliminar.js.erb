$('#operation_delete').html('<%= escape_javascript(render :partial =>'operations/eliminar')%>');
$('#operation_delete').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Eliminar",
  modal: true,
  buttons: {
                "Aceptar": function()
                {
                    $("#form_eliminar_operation form").submit();
                },
                "Cancelar" : function()
                {
                    $("#operation_delete").dialog("close");
                }
            }
});