$('#operation_edit').html('<%= escape_javascript(render :partial =>'operations/edit')%>');
$('#operation_edit').dialog({
  resizable: false,
  height: 'auto',
  width: 'auto',
  title: "Editar",
  modal: true,
  buttons: {
                "Guardar": function()
                {
                    $("#form_edit_operation form").submit();
                },
                "Cancelar" : function()
                {
                    $("#operation_edit").dialog("close");
                }
            }
});